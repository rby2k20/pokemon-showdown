{
    "compilerOptions": {
        "lib": ["es2015", "es2016.array.include", "es2017.object"],
        "noEmit": true,
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "allowJs": true,
        "checkJs": true
    },
    "types": ["node"],
    "exclude": [
        "./.*-dist/**/*",
        "./server/index.js",
        "./server/chat-commands.js"
    ],
    "include": [
        "./config/formats.js",
        "./data/*",
        "./data/mods/*/*",
        "./dev-tools/*.ts",
        "./lib/*",
        "./server/*",
        "./server/tournaments/*",
        "./server/chat-commands/*.ts",
        "./server/chat-plugins/*.ts",
        "./server/chat-plugins/thing-of-the-day.js",
        "./sim/**/*",
        "./tools/set-import/*.ts"
    ]
}
